	<resultMap type="org.spring.domain.OrderVO" id="Order">
		<id column="o_id" property="o_id"/>
		<result column="u_email" property="u_email"/>
		<result column="o_price" property="o_price"/>
		<result column="o_rfname" property="o_rfname"/>
		<result column="o_rlname" property="o_rlname"/>
		<result column="o_phone" property="o_phone"/>
		<result column="o_postcode" property="o_postcode"/>	
		<result column="o_addr" property="o_addr"/>
		<result column="o_state" property="o_state"/>
		<result column="o_date" property="o_date"/>
		<collection column="o_id" property="opvo" javaType="java.util.ArrayList" ofType="org.spring.domain.OrderProdVO" select=""/>
	</resultMap>
	
	<sql id="search">
		<if test="searchType != null">
			<if test="searchType == 'prodNm'.toString()">
				and title like '%' || #{keyword} || '%'
			</if>
		</if>
	</sql>

	<select id="getOrderList" parameterType="org.spring.domain.SearchCriteria" resultMap="org.spring.domain.OrderVO">
		<![CDATA[
			SELECT 
				* 
			FROM (
			SELECT 
				ROWNUM RNUM,o_id,o_qty,o_sz,o_type,o_price,o_rfname,o_rlname,o_phone,o_postcode,o_addr,o_state
			FROM (
			SELECT 
				o.o_id,o.o_qty,o.o_sz,o.o_type,o.o_price,o.o_rfname,o.o_rlname,o.o_phone,o.o_postcode,o.o_addr, o.o_state
			FROM 
				tbl_order o INNER JOIN tbl_prod p
			ON
				o.p_id = p.p_id 
			WHERE 
				o.u_email = #{email}
			ORDER BY 
				o.o_id))
			WHERE 
				RNUM > (#{page} -1) * #{perPageNum} and RNUM <= #{page} * #{perPageNum}
 		]]>
	</select>
	<select id="getOrderTotalCnt" parameterType="String" resultType="Int">
		SELECT count(*)
		FROM tbl_order
		WHERE u_email=#{email}
	</select>
	
