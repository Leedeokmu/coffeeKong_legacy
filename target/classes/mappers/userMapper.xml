	<update id="update" parameterType="org.spring.domain.UserVO">
		<![CDATA[
 		UPDATE
 			tbl_user
 		SET
 			u_fname=#{u_fname}, u_lname=#{u_lname}, u_pwd=#{u_pwd}
 		WHERE
 			u_email=#{u_email} 
 		]]>
	</update>
	<delete id="delete" parameterType="String">
		DELETE
			FROM tbl_user
		WHERE
			u_email=#{email}
	</delete>
